<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<MenuBar xmlns="http://javafx.com/javafx/20.0.0" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="de.pascalwagler.epubcheckfx.ui.controller.MenuPanelController">
    <Menu text="%menu.view">
        <Menu fx:id="menuViewTheme" text="%menu.view.theme"/>
    </Menu>
    <Menu text="%menu.help">
        <MenuItem text="%menu.help.documentation" onAction="#openDocumentation"/>
        <MenuItem text="%menu.help.report_a_bug" onAction="#openReportABug"/>
        <SeparatorMenuItem/>
        <MenuItem text="%menu.help.about" onAction="#openAboutWindow"/>
    </Menu>
</MenuBar>
