<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.pascalwagler.epubcheckfx.ui.MainContentController">
    <center>
        <VBox alignment="CENTER" prefHeight="400.0" BorderPane.alignment="CENTER">
            <children>
                <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="%result_tab.validation">
                            <content>
                                <TableView fx:id="validationResultTable" prefHeight="200.0" prefWidth="200.0" styleClass="striped">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="messageId" maxWidth="100" text="%result_table.column_message_id" />
                                        <TableColumn fx:id="severity" maxWidth="110" text="%result_table.column_severity" />
                                        <TableColumn fx:id="message" text="%result_table.column_message" />
                                        <TableColumn fx:id="path" text="%result_table.column_path" />
                                        <TableColumn fx:id="line" maxWidth="70" styleClass="align-right" text="%result_table.column_line" />
                                        <TableColumn fx:id="column" maxWidth="70" styleClass="align-right" text="%result_table.column_column" />
                                    </columns>
                                </TableView>
                            </content>
                        </Tab>
                        <Tab text="%result_tab.info">
                            <content>
                                <TableView fx:id="infoResultTable" prefHeight="200.0" prefWidth="200.0" styleClass="striped">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="feature" maxWidth="140" text="%info_table.column_feature" />
                                        <TableColumn fx:id="resource" text="%info_table.column_resource" />
                                        <TableColumn fx:id="value" text="%info_table.column_value" />
                                    </columns>
                                </TableView>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox>
    </center>
    <top>
        <HBox>
            <children>
                <fx:include fx:id="infoPanel" source="InfoPanel.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#runEpubCheck" text="Re-Check">
                    <graphic>
                        <FontIcon iconLiteral="mdmz-refresh" iconSize="64" />
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>
    <bottom>
        <HBox alignment="BOTTOM_LEFT" prefHeight="0.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label fx:id="epubcheckVersion" text="Input" />
                <Pane prefHeight="0" prefWidth="0" HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="exportFormat">
                </ComboBox>
                <Button mnemonicParsing="false" onAction="#export" text="%export">
                    <graphic>
                        <FontIcon iconLiteral="mdmz-save_alt" iconSize="64" />
                    </graphic>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
