<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-2.1.1.xsd">

    <id>dist-win</id>

    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.build.directory}/${project.name}.exe</source>
        </file>
        <file>
            <source>${project.basedir}/README.md</source>
        </file>
        <file>
            <source>${project.basedir}/LICENSE</source>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/img</directory>
        </fileSet>
    </fileSets>
</assembly>
